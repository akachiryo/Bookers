<body>
  <h1>Editing Book</h1>
  <%= form_with model:@book, local: true do |f| %>
    <div class="field">
      <label>Title</label>
      <div ><%= f.text_field :title %></div>
    </div>
    <div class="field">
      <label>Body</label>
      <div class="text_area_edit"><%=f.text_area :body %></div>
    </div>
    <div class="action"><%= f.submit 'Update Book' %></div>
  <% end %>
  <%= link_to "Show", "/books/#{@book.id}" %>
  
  <p class="show_p">|</p>
  <%= link_to "Back", "/index" %>
  
</body>


  