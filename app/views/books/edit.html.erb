<body>
  <h1>Editing Book</h1>
   <% if @book.errors.any? %>
      <div class="errors_message">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved: </h2>
        <ul class="errors_ul">
          <% @book.errors.full_messages.each do |message| %>
            <li class="errors_li"><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
  <%= form_with model:@book, local: true do |f| %>
    <div class="field">
      <%= f.label :title, 'Title' %>
      <div ><%= f.text_field :title %></div>
    </div>
    <div class="field">
      <%= f.label :body, 'Body' %>
      <div class="text_area_edit"><%=f.text_area :body %></div>
    </div>
    <div class="action"><%= f.submit 'Update Book' %></div>
  <% end %>
  <%= link_to "Show", "/books/#{@book.id}" %>
  
  <p class="show_p">|</p>
  <%= link_to "Back", "/books" %>
  
</body>


  